# Backend API Configuration
# Replace localhost with your Android phone's actual IP address when deploying
# For local testing on Windows: use localhost
# For LAN access: use 192.168.0.88 (your actual IP)
VITE_API_BASE_URL=http://localhost:3000

# Set to 'true' to use backend server, 'false' to use CoinGecko directly
VITE_USE_BACKEND=true

# Set to 'true' to fallback to CoinGecko if backend fails
VITE_FALLBACK_TO_COINGECKO=true

# Data Synchronization
# Set to 'true' to enable LAN sync (Android backend becomes single source of truth)
# Set to 'false' to use local-only storage (no sync)
VITE_SYNC_ENABLED=true

